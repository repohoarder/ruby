<p id="notice"><%= notice %></p>

<h1>Events</h1>

<table>
  <thead>
    <tr>
      <th>Patient</th>
      <th>Provider</th>
      <th>Name</th>
      <th>Start</th>
      <th>End</th>
      <th>Confirmed</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.patient_id %></td>
        <td><%= event.provider_id %></td>
        <td><%= event.name %></td>
        <td><%= event.start %></td>
        <td><%= event.end %></td>
        <td><%= event.confirmed %></td>
        <td><%= event.notes %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

