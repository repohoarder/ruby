<p id="notice"><%= notice %></p>

<h1>Provider Patients</h1>

<table>
  <thead>
    <tr>
      <th>Provider</th>
      <th>Patient</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @provider_patients.each do |provider_patient| %>
      <tr>
        <td><%= provider_patient.provider_id %></td>
        <td><%= provider_patient.patient_id %></td>
        <td><%= provider_patient.active %></td>
        <td><%= link_to 'Show', provider_patient %></td>
        <td><%= link_to 'Edit', edit_provider_patient_path(provider_patient) %></td>
        <td><%= link_to 'Destroy', provider_patient, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

